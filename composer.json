{
    "name": "setono/sylius-bulk-specials-plugin",
    "type": "sylius-plugin",
    "keywords": ["sylius", "sylius-plugin"],
    "description": "Bulk specials plugin for Sylius.",
    "license": "MIT",
    "require": {
        "sylius/sylius": "~1.3"
    },
    "require-dev": {
        "enqueue/enqueue-bundle": "^0.8.37",
        "enqueue/fs": "^0.8.37",

        "behat/behat": "^3.4",
        "behat/mink": "^1.7@dev",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.2",
        "behat/mink-selenium2-driver": "^1.3",
        "friends-of-behat/context-service-extension": "^1.2",
        "friends-of-behat/cross-container-extension": "^1.1",
        "friends-of-behat/service-container-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^1.2.1",
        "friends-of-behat/variadic-extension": "^1.1",
        "lakion/mink-debug-extension": "^1.2.3",
        "phpspec/phpspec": "^5.0",
        "phpstan/phpstan-doctrine": "^0.10",
        "phpstan/phpstan-shim": "^0.10",
        "phpstan/phpstan-symfony": "^0.10",
        "phpstan/phpstan-webmozart-assert": "^0.10",
        "phpunit/phpunit": "^6.5",
        "sylius-labs/coding-standard": "^2.0",
        "symfony/browser-kit": "^3.4|^4.1",
        "symfony/debug-bundle": "^3.4|^4.1",
        "symfony/dotenv": "^3.4|^4.1",
        "symfony/intl": "^3.4|^4.1",
        "symfony/web-profiler-bundle": "^3.4|^4.1",
        "symfony/web-server-bundle": "^3.4|^4.1",
        "sensiolabs/security-checker": "^4.1"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\SyliusBulkSpecialsPlugin\\": "src/",
            "Tests\\Setono\\SyliusBulkSpecialsPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppBundle\\": "tests/Application/src/AppBundle/"
        },
        "files": [ "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php" ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "check-style": "./vendor/bin/ecs check src/ tests/Application/src/",
        "fix-style": "./vendor/bin/ecs check src/ tests/Application/src/ --fix",
        "analyse": "./vendor/bin/phpstan.phar analyse -c phpstan.neon -l max src/ tests/Application/src/"
    }
}
