<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="setono_sylius_bulk_specials.registry_special_rule_checker"
                 class="Sylius\Component\Registry\ServiceRegistry">
            <argument>Setono\SyliusBulkSpecialsPlugin\Special\Checker\Rule\RuleCheckerInterface</argument>
            <argument>rule checker</argument>
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_checker.has_taxon"
                 class="Setono\SyliusBulkSpecialsPlugin\Special\Checker\Rule\HasTaxonRuleChecker">
            <tag name="setono_sylius_bulk_specials.special_rule_checker"
                 type="has_taxon"
                 label="setono_sylius_bulk_specials.form.special_rule.has_taxon"
                 form-type="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\HasTaxonConfigurationType" />
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_checker.contains_product"
                 class="Setono\SyliusBulkSpecialsPlugin\Special\Checker\Rule\ContainsProductRuleChecker">
            <tag name="setono_sylius_bulk_specials.special_rule_checker"
                 type="contains_product"
                 label="setono_sylius_bulk_specials.form.special_rule.contains_product"
                 form-type="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\ContainsProductConfigurationType" />
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_checker.contains_products"
                 class="Setono\SyliusBulkSpecialsPlugin\Special\Checker\Rule\ContainsProductsRuleChecker">
            <tag name="setono_sylius_bulk_specials.special_rule_checker"
                 type="contains_products"
                 label="setono_sylius_bulk_specials.form.special_rule.contains_products"
                 form-type="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\ContainsProductsConfigurationType" />
        </service>

    </services>
</container>
