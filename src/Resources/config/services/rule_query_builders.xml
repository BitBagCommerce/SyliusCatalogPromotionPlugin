<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="setono_sylius_bulk_specials.registry.special_rule_query_builder"
                 class="Setono\SyliusBulkSpecialsPlugin\Special\QueryBuilder\Rule\RuleQueryBuilderServiceRegistry" />

        <service id="setono_sylius_bulk_specials.special_rule_query_builder.has_taxon"
                 class="Setono\SyliusBulkSpecialsPlugin\Special\QueryBuilder\Rule\HasTaxonRuleQueryBuilder">
            <tag name="setono_sylius_bulk_specials.special_rule_query_builder"
                 type="has_taxon" />
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_query_builder.contains_product"
                 class="Setono\SyliusBulkSpecialsPlugin\Special\QueryBuilder\Rule\ContainsProductRuleQueryBuilder">
            <tag name="setono_sylius_bulk_specials.special_rule_query_builder"
                 type="contains_product" />
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_query_builder.contains_products"
                 class="Setono\SyliusBulkSpecialsPlugin\Special\QueryBuilder\Rule\ContainsProductsRuleQueryBuilder">
            <tag name="setono_sylius_bulk_specials.special_rule_query_builder"
                 type="contains_products" />
        </service>

    </services>
</container>
