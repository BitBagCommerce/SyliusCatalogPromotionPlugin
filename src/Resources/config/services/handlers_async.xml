<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="setono_sylius_bulk_specials.recalculate_async_handler.channel_pricing"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\ChannelPricingRecalculateAsyncHandler"
                 decorates="setono_sylius_bulk_specials.recalculate_handler.channel_pricing"
                 decoration-priority="256">
            <argument type="service" id="enqueue.client.spool_producer" />
            <argument type="service" id="sylius.repository.channel_pricing" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_async_handler.channel_pricing.inner" />

            <tag name="enqueue.client.processor" />
        </service>

        <service id="setono_sylius_bulk_specials.async_handler.eligible_specials_reassign"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\EligibleSpecialsReassignAsyncHandler"
                 decorates="setono_sylius_bulk_specials.handler.eligible_specials_reassign"
                 decoration-priority="256">
            <argument type="service" id="enqueue.client.spool_producer" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="setono_sylius_bulk_specials.async_handler.eligible_specials_reassign.inner" />

            <tag name="enqueue.client.processor" />
        </service>

        <service id="setono_sylius_bulk_specials.recalculate_async_handler.product"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\ProductRecalculateAsyncHandler"
                 decorates="setono_sylius_bulk_specials.recalculate_handler.product"
                 decoration-priority="256">
            <argument type="service" id="enqueue.client.spool_producer" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_async_handler.product.inner" />

            <tag name="enqueue.client.processor" />
        </service>

        <service id="setono_sylius_bulk_specials.recalculate_async_handler.special"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\SpecialRecalculateAsyncHandler"
                 decorates="setono_sylius_bulk_specials.recalculate_handler.special"
                 decoration-priority="256">
            <argument type="service" id="enqueue.client.spool_producer" />
            <argument type="service" id="setono_sylius_bulk_specials.repository.special" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_async_handler.special.inner" />

            <tag name="enqueue.client.processor" />
        </service>

    </services>
</container>
