<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Setono\SyliusCatalogPromotionPlugin\Model\PromotionRule">
        <property name="configuration">
            <constraint name="Valid"/>
        </property>
        <constraint name="Setono\SyliusCatalogPromotionPlugin\Validator\Constraints\PromotionRulesNotEmpty">
            <option name="message">setono_sylius_catalog_promotion.promotion.rule_not_be_empty</option>
            <option name="groups">setono_sylius_catalog_promotion</option>
        </constraint>
    </class>
</constraint-mapping>
